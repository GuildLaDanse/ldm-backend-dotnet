@using System.Globalization
@using TimeZoneConverter

@RenderDateTime()

@code {
    
    [Parameter]
    public DateTime UtcDateTime { get; set; }
    
    [Parameter]
    public string Format { get; set; }

    private string RenderDateTime()
    {
        /*
         * "Europe/Paris" is the time zone of the realm Defias Brotherhood
         */
        var parisZone = TZConvert.GetTimeZoneInfo("Europe/Paris");
        
        var parisDateTime = TimeZoneInfo.ConvertTimeFromUtc(UtcDateTime, parisZone);
        
        /*
         * We us "en-US" because the site is only available in English.
         */
        return parisDateTime.ToString(
            Format,
            CultureInfo.CreateSpecificCulture("en-US"));
    }
    
}